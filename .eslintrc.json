{
	"env": {
		"browser": false,
		"es2021": true,
		"node": true
	},
	"extends": ["@typescript-eslint/recommended"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint", "prettier"],
	"rules": {
		"arrow-parens": [2, "as-needed"],
		"camelcase": 2,
		"indent": ["on", 4],
		"spaced-comment": "error"
	}
}
