{
    "env": {
        "browser": false,
        "es2021": true,
        "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "prettier"],
    "rules": {
        "arrow-parens": [2, "as-needed"],
        "camelcase": 2,
        "indent": [1, 4],
        "spaced-comment": "warn",
        "no-unused-vars": "warn"
    }
}
